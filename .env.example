# Database
DATABASE_URL="mysql://root@localhost:3306/hrms_db"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Session Configuration
# Tiempo de inactividad en minutos antes de cerrar sesión automáticamente (default: 60 minutos)
NEXT_PUBLIC_SESSION_TIMEOUT_MINUTES="60"
# Tiempo en minutos antes del cierre de sesión para mostrar advertencia (default: 5 minutos)
NEXT_PUBLIC_SESSION_WARNING_MINUTES="5"

# Redis (opcional - para BullMQ y rate limiting)
REDIS_URL="redis://localhost:6379"

# Email (opcional - Resend)
RESEND_API_KEY="re_123456789"
EMAIL_FROM="noreply@yourdomain.com"

# File Upload (opcional - UploadThing)
UPLOADTHING_SECRET="sk_live_123456789"
UPLOADTHING_APP_ID="app_123456789"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Logging
LOG_LEVEL="debug"
